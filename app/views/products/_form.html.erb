<%= simple_form_for(product, html: { multipart: true }) do |f| %>
  <%= f.input :category, collection: Product::CATEGORY %>
  <%= f.input :condition %>
  <%= f.input :description, maxlength: 70 %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file, input_html: { id: "photo-input" }, label: '<i class="fas fa-download"></i> Photo'.html_safe %>
  <%= f.button :submit, class: "btn btn-primary mt-4" %>
<% end %>
