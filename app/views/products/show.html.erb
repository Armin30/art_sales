<h2 class="mb-4">Products</h2>
<div class="row">

    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @product.photo.key %>'); background-size: cover;"></div>
        <div class="card-body">
          <h5 class="card-title"><%= @product.description %></h5>
          <p class="card-text"><strong><%= @product.price %>â‚¬ day</strong></p>
        </div>
      </div>
    </div>
</div>

<div class="col-md-8 mb-4">
  <div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <%= link_to products_path do %>
      <div class="btn btn-primary"> Back </div>
    <% end %>

    <% if policy(@product).edit?  %>
      <%= link_to edit_product_path do %>
        <div class="btn btn-primary"> Edit </div>
      <% end %>
    <% end  %>

    <% unless policy(@product).edit? %>
        <%= link_to  product_rentings_path(@product, @renting), data: {turbo_method: :post } do %>
          <div class="btn btn-success"> Book this product </div>
        <% end %>
      <% end %>




    <% if policy(@product).destroy?  %>
      <%= link_to product_path(@product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <div class="btn btn-danger"> Delete </div>
      <% end %>
    <% end  %>
  </div>
  <% if notice %>
    <%= notice %>
  <% end %>
</div>
