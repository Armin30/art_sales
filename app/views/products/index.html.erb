<h1>Products#Page</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
<tbody>
    <% @products.each do |product|  %>
      <tr>
        <div class="cards">
          <%= cl_image_tag product.photo.key, height: 160, width: 200, crop: :fill %>
          <td><%= product.description %></td>
          <br>
          <td><%= product.price %></td>
          <td><%= link_to 'Show', product %></td>
           <br>
          <% if policy(product).edit?  %>
              <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <% end  %>
          <% if policy(product).destroy?  %>
            <td><%= link_to 'Delete', product,  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
          <% end  %>
        </div>
      </tr>
    <% end  %>
  </tbody>
</table>
<br>


<% if policy(Product).new?  %>
  <%= link_to 'Add New Product', new_product_path, class: 'btn btn-primary' %>
<% end  %>
