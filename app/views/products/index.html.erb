<h1>Products</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path product.photo.key %>'); background-size: cover;"></div>
        <div class="card-body">
          <h5 class="card-title"><%= product.description %></h5>
          <p class="card-text"><strong><%= product.price %>â‚¬</strong></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', product, class: 'btn btn-primary mr-2' %>
          <% if policy(product).edit? %>
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-secondary mr-2' %>
          <% end %>
          <% if policy(product).destroy? %>
            <%= link_to 'Delete', product, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<% if policy(Product).new? %>
  <%= link_to 'Add New Product', new_product_path, class: 'btn btn-primary' %>
<% end %>
