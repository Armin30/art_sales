<h1>Products</h1>


    <% @products.each do |product|  %>
  <div class="cards">
        <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
          url('<%= cl_image_path product.photo.key %>')">
        </div>
        <div class="text"><%= product.description %></div>
        <div class="text"><%= product.price %> </div>
        <div class="comands">
          <%= link_to 'Show', product %>
          <% if policy(product).edit?  %>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <% end  %>
          <% if policy(product).destroy?  %>
            <%= link_to 'Delete', product,  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <% end  %>
      </div>
  </div>
    <% end %>

<br>


<% if policy(Product).new?  %>
  <%= link_to 'Add New Product', new_product_path, class: 'btn btn-primary' %>
<% end  %>
